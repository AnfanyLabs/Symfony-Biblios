    {% extends 'base.html.twig' %}

{% block title %}Détails sur un auteur {% endblock %}

{% block body %}

    <h1 class="text-white">Auteur : </h1>
    {% if author is not null %}
        <div class="card mb-1 m-auto">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between">
                    <h4 class="mb-1">{{ author.name }}</h4>
                    <small>Identifiant : {{ author.id }}</small>
                </div>
                <div class="d-flex justify-content-between card-text">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Date de naissance : {{ author.dateOfBirth|date('d-m-Y') }}</li>
                        <li class="list-group-item">Date de décès : {{ author.dateOfDeath ?  author.dateOfDeath|date('d-m-Y') : '-'}}</li>
                    </ul>
                    <p><small>Nationalité : {{ author.nationality }}</small></p>
                    <span>
                       <a href="{{ path('app_admin_author_edit', {id: author.id})}}" class = "btn btn-primary">Éditer l'auteur</a>
                       <a href="{{ path('app_admin_author_index')}}" class = "btn btn-primary">Retour à la liste des auteurs</a>
                    </span>
                </div>
            </div>
        </div>
    {% else %}
        <div>Auteur non trouvé</div>
    {% endif %}
</div>
{% endblock %}