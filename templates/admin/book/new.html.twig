{% extends 'base.html.twig' %}

{% block title %} Ajout d'un nouveau livre {% endblock %}

{% block body %}

{{ form_start(form) }}
    <div class="card text-light my-4 bg-dark">
        <div class="card-header text-center">
            Ajouter un nouveau livre
        </div>
        <div class="card-body">
             {{ form_row(form.title, {'label':'Titre de l\'ouvrage:'} ) }}
             {{ form_row(form.isbn, {'label':'isbn'} ) }}
             {{ form_row(form.cover, {'label':'Couverture:'} ) }}
             {{ form_row(form.editedAt, {'label':'Edit√© le:'} ) }}
             {{ form_row(form.pageNumber, {'label':'Nombre de pages:'} ) }}
             {{ form_row(form.plot) }}
             {{ form_row(form.status, {'label':'Status:'} ) }}
             {{ form_row(form.authors, {'label':'Auteur(s)'} ) }}
             {{ form_row(form.editor, {'label':'Editeur:'} ) }}
             {{ form_row(form.certification, {'label':'Je certifie exactes les informations fournies:'} ) }}
            <button class="btn btn-primary">Envoyer</button>
        </div>
    </div>
{{ form_end(form) }}
{% endblock %}
