{% extends 'base.html.twig' %}

{% block title %}Enregistrement{% endblock %}

{% block body %}

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}

        <div class="card text-light my-4 bg-dark">
            <div class="card-header text-center">
                <h1>Enregistrement</h1>
            </div>
            <div class="card-body">
            {{ form_row(registrationForm.firstName,{
                label:'Nom'
            }) }}
            {{ form_row(registrationForm.lastName, {
                label:'Prénom'
            }) }}
            {{ form_row(registrationForm.email) }}

            {{ form_row(registrationForm.password, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.password_confirm, {
                label: 'Confirmer le mot de passe'
            }) }}
            {{ form_row(registrationForm.roles, {
                label: 'Choisissez votre status'
            }) }}
            <button type="submit" class="btn">S'enrégistrer</button>
            </div>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}
